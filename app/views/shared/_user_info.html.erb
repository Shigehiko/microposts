<% @user ||= current_user %>
<div class="panel panel-default">
  <div class="panel-body">
   <%= link_to gravatar_for(@user, size: 50), @user %>
     <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", profile_user_path(current_user) %></span>
        <span><%= pluralize(@user.microposts.count, "micropost") %></span>
         <%= render 'shared/stats' %>
  </div>
</div>